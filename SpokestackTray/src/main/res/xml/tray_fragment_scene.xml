<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/tray_open_transition"
        motion:constraintSetEnd="@id/tray_opened"
        motion:constraintSetStart="@id/tray_closed"
        motion:duration="@integer/spsk_trayAnimateMs"
        motion:motionInterpolator="easeInOut">

    </Transition>

    <Transition
        android:id="@+id/tray_close_transition"
        motion:constraintSetEnd="@id/tray_closed"
        motion:constraintSetStart="@id/tray_opened"
        motion:duration="@integer/spsk_trayAnimateMs"
        motion:motionInterpolator="easeInOut">
    </Transition>

    <ConstraintSet android:id="@+id/tray_closed">
        <Constraint
            android:id="@id/trayView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="parent">
            <PropertySet motion:motionProgress="0"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/tray_opened">
        <Constraint
            android:id="@id/trayView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
            <PropertySet motion:motionProgress="1"/>
        </Constraint>
    </ConstraintSet>
</MotionScene>